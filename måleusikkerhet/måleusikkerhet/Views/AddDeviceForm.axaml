<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:måleusikkerhet.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="måleusikkerhet.Views.AddDeviceForm">
    <UserControl.DataContext>
        <viewModels:AddDeviceFormViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <Grid RowDefinitions="*" ColumnDefinitions="Auto,*">
            <Label Margin="10" VerticalContentAlignment="Center">Name</Label>
            <TextBox Grid.Column="1" Margin="10"></TextBox>
        </Grid>
        <Button Click="LoadImage">Upload Image</Button>
        <Image Width="128" Height="128" Source="{Binding Image}"></Image>
        <Viewbox>
            
        </Viewbox>
    </StackPanel>
</UserControl>
